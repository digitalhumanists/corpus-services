            <type>jar</type>
        </dependency>
      <dependency>
        <groupId>org.languagetool</groupId>
        <artifactId>language-de</artifactId>
        <version>4.2</version>
      </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
